<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:laf="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.lostandfoundapp.activity.LoginActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="用户登录"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/login_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@style/AppTheme"
        android:src="@drawable/default_pic" />

    <com.lostandfoundapp.view.MyEditText
        android:id="@+id/login_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        laf:ems="11"
        laf:singleLine="true"
        laf:inputType="number"
        laf:text="请输入您的手机号码" />

    <com.lostandfoundapp.view.MyEditText
        android:id="@+id/login_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        laf:singleLine="true"
        laf:inputType="textPassword"
        laf:text="请输入您的用户密码" />

    <Button
        android:id="@+id/login_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button_selector"
        android:text="登    录"
        android:textColor="#000000" />
    <Button
        android:id="@+id/login_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button_selector"
        android:text="取    消"
        android:textColor="#000000" />
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/login_ck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="已阅读并同意"
                android:textSize="12sp"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务条款"
                android:textColor="#00aaff"
                android:textSize="12sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还没有帐号？"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/login_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即注册"
            android:textColor="#00ff00"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>